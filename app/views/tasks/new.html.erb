<h1>スケジュール新規作成</h1>
<%= form_for(@task) do |f| %>
  <table>
    <tr>
      <th><%= f.label :title, 'タイトル' %></th>
      <td><%= f.text_field :title, class: "w_100" %>
        <% if @task.errors.include?(:title) %>
          <div style="color: red;"><%= 'タイトルを入力してください' %></div>
        <% end %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :start_date, '開始日' %></th>
      <td><%= f.date_field :start_date, class: "w_100" %>
        <% if @task.errors.include?(:start_date) %>
          <div style="color: red;"><%= '開始日を選択してください' %></div>
        <% end %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :end_date, '終了日' %></th>
      <td><%= f.date_field :end_date, class: "w_100" %>
        <% if @task.errors.include?(:end_date) %>
          <div style="color: red;"><%= '終了日を選択してください' %></div>
        <% end %>
      </td>
    </tr>
    <tr>
      <th><%= f.label :all_day, '終日' %></th>
      <td><%= f.check_box :all_day, {}, "○", "" %><br>終日の場合はチェックを入れます</td>
    </tr>
    <tr>
      <th><%= f.label :body, 'スケジュールメモ' %></th>
      <td><%= f.text_area :body, class: "memo" %></td>
    </tr>
  </table>
  <p></p>
  <div><%= f.submit 'スケジュールを新規登録する', class: "m_left" %></div>
<% end %>
<%= link_to 'スケジュール一覧に戻る', tasks_path, class: "m_left" %>